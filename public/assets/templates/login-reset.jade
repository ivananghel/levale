doctype html
html(lang="en")
    head
        title Page Login reset
        include elements/head
    body
        .site-wrapper
            .box-table
                .box-cell
                    .main-box
                        .container
                            .row
                                .col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.col-xxs-12
                                    .login-auth.text-center
                                        a(href="/")
                                            img(src="assets/img/YourCoise.png" alt="YourCoise")
                                    .panel.panel-default
                                       .panel-heading
                                           .heading-title.medium Wachtwoord herstellen
                                       .panel-body
                                            form(method="post" action="#")
                                                .form-group
                                                    label.control-label(for="field-password") Wachtwoord
                                                    input.form-control(type="password" name="field-password" id="field-password" value="" placeholder="Wachtwoord")
                                                .form-group
                                                    label.control-label(for="field-password-confirm") Wachtwoord herhalen
                                                    input.form-control(type="password" name="field-password-confirm" id="field-password-confirm" value="" placeholder="Wachtwoord herhalen")
                                                .form-group
                                                    button.btn.btn-primary.btn-block(type="submit") Wachtwoord aanpassen
        include elements/footer
        include elements/scripts

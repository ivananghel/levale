doctype html
html(lang="en")
    head
        title Page Login
        include elements/head
    body
        .site-wrapper
            .box-table
                .box-cell
                    .main-box
                        .container
                            .row
                                .col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.col-xxs-12
                                    .login-auth.text-center
                                        a(href="/")
                                            img(src="assets/img/YourCoise.png" alt="YourCoise")
                                    .panel.panel-default
                                       .panel-heading
                                           .heading-title Login
                                       .panel-body
                                            form(method="post" action="#")
                                                .form-group
                                                    label.control-label(for="field-email") Login
                                                    input.form-control(type="email" name="field-email" id="field-email" value="" placeholder="Email")
                                                .form-group
                                                    label.control-label(for="field-password") Wachtwoord
                                                    input.form-control(type="password" name="field-password" id="field-password" value="" placeholder="Password")
                                                .form-group.fg-sm
                                                    .checkbox
                                                        input(type="checkbox" name="check-remember" id="check-remember")
                                                        label(for="check-remember") Onthoud mij
                                                .form-group.fg-sm
                                                    .btn.btn-link(href="#") Wachtwoord vergeten
                                                .form-group
                                                    button.btn.btn-primary.btn-block(type="submit") Login
        include elements/footer
        include elements/scripts
